generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id     Int      @id @default(autoincrement())
  name   String
  titles Title[]
}

model Title {
  id           Int      @id @default(autoincrement())
  title        String
  authorId     Int
  author       Author   @relation(fields: [authorId], references: [id])
  rating       Float
  inStock      Int
  description  String
  publishedAt  DateTime
  borrowed     Int
  freeToLoans  Int

  books        Book[]
}

model Book {
  id       Int    @id @default(autoincrement())
  titleId  Int
  title    Title  @relation(fields: [titleId], references: [id])
  loaned   Boolean @default(false)
  loans    Loan[]
}

model User {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  loans   Loan[]
}

model Loan {
  id          Int       @id @default(autoincrement())
  bookId      Int
  userId      Int
  loanedAt    DateTime  
  returnedAt  DateTime?

  book        Book      @relation(fields: [bookId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}
